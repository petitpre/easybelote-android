<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.petitpre.easybelote.model.Declaration"/>
        <variable
                name="viewModel"
                type="com.petitpre.easybelote.ui.ScoreViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.ScoreFragment">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/close"
                android:src="@drawable/close"
                android:tint="@color/black"
                android:layout_marginTop="32dp"
                android:padding="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:isSelected="@{viewModel.taking == 0 || viewModel.taking == 2}"
                android:text='@{viewModel.players[0] +  " + " +  viewModel.players[2]}'
                tools:text="vous + tom"
                android:textAllCaps="true"

                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/appCompatTextView2"/>

        <ImageView
                app:isVisible="@{viewModel.taking == 0 || viewModel.taking == 2}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check" android:alpha="0"
                app:layout_constraintStart_toEndOf="@+id/appCompatTextView2" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/appCompatTextView2" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/my_score" android:id="@+id/imageView2"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/my_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center"
                tools:text="100"
                android:text="@{viewModel.myScoreRound}"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

        />

        <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/my_declarations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:flexWrap="wrap"
                app:justifyContent="center"

                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/my_score"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <ToggleButton
                    style="@style/DeclarationTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="@string/tierce"
                    android:textOff="@string/tierce"/>
            <ToggleButton
                    style="@style/DeclarationTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="@string/quarte"
                    android:textOff="@string/quarte"/>
            <ToggleButton
                    style="@style/DeclarationTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="@string/quinte"
                    android:textOff="@string/quinte"/>
            <ToggleButton
                    style="@style/DeclarationTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="@string/carre_of_nine"
                    android:textOff="@string/carre_of_nine"/>
            <ToggleButton
                    style="@style/DeclarationTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="@string/carre_of_aces"
                    android:textOff="@string/carre_of_aces"
                    android:onClick="@{() -> viewModel.addDeclaration(true,Declaration.carre_of_aces)}"
            />

        </com.google.android.flexbox.FlexboxLayout>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:isSelected="@{viewModel.taking == 1 || viewModel.taking == 3}"
                android:text='@{viewModel.players[1] +  " + " +  viewModel.players[3]}'
                tools:text="jb + noemie"
                android:textAllCaps="true"

                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/appCompatTextView3"
                app:layout_constraintTop_toBottomOf="@+id/my_declarations"/>

        <ImageView
                app:isVisible="@{viewModel.taking == 1 || viewModel.taking == 3}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check" android:alpha="0"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView3"
                app:layout_constraintTop_toTopOf="@+id/appCompatTextView3"
                app:layout_constraintStart_toEndOf="@+id/appCompatTextView3"
                android:layout_marginStart="8dp" android:id="@+id/imageView"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:gravity="center"
                android:maxLines="1"
                android:inputType="number"
                tools:text="52"
                android:text="@{viewModel.otherScoreRound}"
                android:layout_marginTop="8dp"

                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/appCompatEditText2"/>


        <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/other_declarations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:flexWrap="wrap"
                app:justifyContent="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"

                app:layout_constraintTop_toBottomOf="@+id/appCompatEditText2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <ToggleButton
                    style="@style/DeclarationTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="@string/tierce"
                    android:textOff="@string/tierce"/>
            <ToggleButton
                    style="@style/DeclarationTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="@string/quarte"
                    android:textOff="@string/quarte"/>
            <ToggleButton
                    style="@style/DeclarationTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="@string/quinte"
                    android:textOff="@string/quinte"/>
            <ToggleButton
                    style="@style/DeclarationTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="@string/carre_of_nine"
                    android:textOff="@string/carre_of_nine"/>
            <ToggleButton
                    style="@style/DeclarationTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="@string/carre_of_aces"
                    android:textOff="@string/carre_of_aces"
                    android:onClick="@{() -> viewModel.addDeclaration(false,Declaration.carre_of_aces)}"/>

        </com.google.android.flexbox.FlexboxLayout>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/validate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textColor="@color/strawberry"
                android:drawableEnd="@drawable/stripe"
                android:drawableTint="@color/strawberry"
                android:drawablePadding="20dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/other_declarations"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>